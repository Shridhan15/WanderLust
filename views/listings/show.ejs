<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
    <div class="col-8 offset-3 mt-3">
        

    <h3>Listing Details: </h3>
    </div>
    <div class="card  col-6 offset-2 show-card">
        <img src="<%= listing.image.url  %>" alt="listings_image" class="card-img-top show-img">
        <div class="card-body">
            <p class="card-text">
                <b><%= listing.title %></b> <br>
                <%= listing.description %> <br>
                &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>  <br>
                <%= listing.location %> <br>
                <%= listing.country %>
            </p>
        </div>
    </div>

   <div class="btns">

       <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 edit-btn offset-3">Edit </a>
   
    
   <div class="col-2">
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark  offset-5">Delete </button>
    </form>
    </div>
   </div>

    

</div>